<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ocean.babycar.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_title">

        <TextView
            android:text="寶貝車"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:id="@+id/tv_title"
            android:elevation="10dp"
            android:textSize="36sp"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:typeface="serif"
            android:fontFamily="serif-monospace"
            android:layout_marginBottom="2dp" />

        <TextView
            android:text="@string/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_subTitle"
            android:layout_marginLeft="83dp"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <View
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_above="@+id/tv_subTitle"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="175dp" />

        <ImageView
            app:srcCompat="@drawable/ic_babycar_logo"
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />

        <Button
            android:text="叫車紀錄"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/btn_record" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/btn_babycart_reservation"
                android:background="@drawable/ani_babycart"
                android:text="汽座預約"
                android:textSize="50sp"
                android:drawableRight="@drawable/ic_right_" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:text="機場接送"
                android:layout_width="match_parent"
                android:id="@+id/btn_airport_carry"
                android:layout_height="140dp"
                android:drawableRight="@drawable/ic_right_"
                android:background="@drawable/ani_airport_carry"
                android:textSize="50sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_marginTop="5dp">

            <!--ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageView6"
                android:background="@drawable/ic_driver_logan"
                app:srcCompat="@color/color_noActionBar_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_height="140dp"
                android:layout_marginBottom="5dp" /-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/btn_driver_login"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="司機登入"
                android:textSize="50sp"
                android:drawableRight="@drawable/ic_right_"
                android:background="@drawable/ani_driver_login" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
